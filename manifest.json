{
  "manifest_version": 2,
  "name": "GeorgesPaul Form Filler",
  "version": "1.0",
  "description": "Intelligently fills forms based on user profiles",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "profileFields.yaml",
    "node_modules/js-yaml/dist/js-yaml.min.js"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js", 
        "node_modules/js-yaml/dist/js-yaml.min.js"
      ]
    }
  ]
}