{
  "manifest_version": 2,
  "name": "GeorgesPaul Form Filler",
  "version": "1.7",
  "description": "Intelligently fills forms based on user profiles",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>",
    "http://localhost/*",
    "https://localhost/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "sidebar_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Form Filler",
    "default_panel": "popup.html"
  },
  "background": {
    "scripts": ["apiUtils.js", "background.js"], 
    "persistent": true
  },
  "web_accessible_resources": [
    "apiUtils.js",
    "profileFields.yaml", 
    "llmConfig.html",
    "llmConfig.js", 
    "popup.js",
    "donation/donation.html",
    "styles.css"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "apiUtils.js",
        "content.js",
        "node_modules/js-yaml/dist/js-yaml.min.js"
      ],
      "run_at": "document_idle", 
      "all_frames": true
    }
  ]
}